{
  "rules": {
    "typescript": "warn",
    "unicorn": "warn",
    "react": "off",
    "jsx-a11y": "off",
    "nextjs": "off"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineExpose": "readonly",
    "withDefaults": "readonly"
  },
  "fix": false,
  "ignore": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.min.js",
    "public/**"
  ]
}
